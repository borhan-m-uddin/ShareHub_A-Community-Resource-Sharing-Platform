{
  "version": 2,
  "installCommand": ":",
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.7.4",
      "memory": 512,
      "maxDuration": 10,
      "includeFiles": [
        "bootstrap.php",
        "config.php",
        "public/**",
        "pages/**",
        "admin/**",
        "includes/**",
        "src/**",
        "storage/**",
        "vendor/**",
        "style.css",
        "assets/**",
        "uploads/**"
      ]
    }
  },
  "routes": [
    { "src": "^/(assets/.*)$", "dest": "/$1" },
    { "src": "^/(uploads/.*)$", "dest": "/$1" },
    { "src": "^/favicon\\.ico$", "dest": "/favicon.ico" },
    { "src": "^/style\\.css$", "dest": "/style.css" },
    { "src": "^(?!/api/).*", "dest": "/api/index.php" }
  ]
}
