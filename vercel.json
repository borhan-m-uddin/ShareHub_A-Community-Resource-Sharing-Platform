{
  "version": 2,
  "installCommand": "composer install --no-dev --prefer-dist --no-interaction",
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.8.4",
      "memory": 512,
      "maxDuration": 20
    }
  },
  "routes": [
    { "src": "^/(assets/.*)$", "dest": "/$1" },
    { "src": "^/(uploads/.*)$", "dest": "/$1" },
    { "src": "^/favicon\\.ico$", "dest": "/favicon.ico" },
    { "src": "^/style\\.css$", "dest": "/style.css" },
    { "src": "^(?!/api/).*", "dest": "/api/index.php" }
  ]
}
